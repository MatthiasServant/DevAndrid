<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".view.MainActivity"
        tools:layout_editor_absoluteY="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="30dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:defaultQueryHint="Rechercher une ville"
                app:iconifiedByDefault="false"
                app:queryHint="Rechercher une ville" />

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coming_soon"
            android:text="Bordeaux"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acumin"
            android:text="29 mars 2023"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="30°C"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/weatherCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nuageux"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="329dp"
            android:layout_height="162dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="10dp">

           <androidx.cardview.widget.CardView
               android:id="@+id/card_view"
               android:layout_width="83dp"
               android:layout_height="84dp"
               android:layout_marginStart="16dp"
               app:cardBackgroundColor="#454545"
               app:cardCornerRadius="5dp"
               android:layout_gravity="center_horizontal">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center_horizontal"
                   android:orientation="vertical"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.0"
                   app:layout_constraintStart_toStartOf="parent"
                   tools:context=".view.MainActivity"
                   tools:layout_editor_absoluteY="0dp"
                   android:paddingTop="5dp">

                   <ImageView
                       android:id="@+id/icon_rain_d"
                       android:layout_width="30dp"
                       android:layout_height="32dp"
                       android:src="@drawable/water_drop" />

                      <TextView
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                   <TextView
                          android:id="@+id/rain_d_text"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Humidité"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

               </LinearLayout>
           </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="83dp"
                android:layout_height="84dp"
                android:layout_marginStart="40dp"
                app:cardBackgroundColor="#454545"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:context=".view.MainActivity"
                    tools:layout_editor_absoluteY="0dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/icon_rain_d_2"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:src="@drawable/wind" />

                    <TextView
                        android:id="@+id/windSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50km/h"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/rain_d_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vent"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="83dp"
                android:layout_height="84dp"
                android:layout_marginStart="40dp"
                app:cardBackgroundColor="#454545"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:context=".view.MainActivity"
                    tools:layout_editor_absoluteY="0dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/icon_rain_d3"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:src="@drawable/sun" />

                    <TextView
                        android:id="@+id/UVIndex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/rain_d_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indice UV"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prévisions journalières"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#454545"
                app:cardCornerRadius="5dp">


                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:context=".view.MainActivity"
                    tools:layout_editor_absoluteY="0dp">

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/rain_d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/icon_rain_d5"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:src="@drawable/water_drop" />

                    <TextView
                        android:id="@+id/rain_d_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidité"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>